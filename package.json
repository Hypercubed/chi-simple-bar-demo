{
  "name": "chi-simple-bar-demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy": "cp app/components/bars/bars-chart.js demo/",
    "babel": "babel demo/bars-chart.js --out-file demo/bar-chart.umd.js --source-maps true",
    "build": "npm run copy && npm run babel"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.12.0",
    "babel-preset-es2015": "^6.14.0"
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "demo/**"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "always"
        }
      ],
      "no-warning-comments": 0,
      "babel/new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "Polymer"
          ]
        }
      ]
    }
  }
}
